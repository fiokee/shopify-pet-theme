<section>
  <div class="three-images-wrapper">
    
  {% if section.settings.image != blank %}
    <div class="one-user">
      <h1></h1>
    </div>

    {% else %}
      <div class="one">
        <h1></h1>
      </div>
  {% endif %}

   
  {% if section.settings.image2 != blank %}
    <div class="two-user">
      <h1></h1>
    </div>

    {% else %}
      <div class="two">
        <h1></h1>
      </div>
  {% endif %}
  </div>
</section>

<style>
  .three-images-wrapper{
    display: flex;
}

.one{
    background-image: url("{{ 'dog.png' | asset_url}}");
    width: 33.3333%;
    height: 500px;
    background-size: cover;
    background-position: center ;
}

.one-user{
    background-image: url("{{ section.settings.image | image_url}}");
    width: 33.3333%;
    height: 500px;
    background-size: cover;
    background-position: center ;
}

.two{
    background-image: url("{{ 'cat.jpg' | asset_url}}");
    width: 33.3333%;
    height: 500px;
    background-size: cover;
    background-position: center ;
}

.two-user{
    background-image: url("{{ section.settings.image2 | image_url}}");
    width: 33.3333%;
    height: 500px;
    background-size: cover;
    background-position: center ;
}
</style>

{% schema %}
{
    "name": "Two-images",
    "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "image",
        "info": "400 x 120px .png recommended"
      },
      {
        "type": "image_picker",
        "id": "image2",
        "label": "image2",
        "info": "400 x 120px .png recommended"
      }
        ],

        "presets": [
            {
                
                "name": "two-image"
            }
        ]
}
{% endschema %}